[
    {kernel, [
        {log_level, info},
        {logger, [
            {handler, default, logger_std_h, #{
                level =>
                    debug,
                config => #{
                    type =>
                        {file, "/var/log/dmt/console.json"},
                    sync_mode_qlen =>
                        20
                },
                formatter =>
                    {logger_logstash_formatter, #{}}
            }}
        ]}
    ]},

    {dmt, [
        {host, <<"dmt">>},
        {port, 8022},
        {scoper_event_handler_options, #{
            event_handler_opts => #{
                formatter_opts => #{
                    max_length => 1000
                }
            }
        }},
        {services, #{
            repository => #{
                url => <<"http://dmt.default:8022/v1/domain/repository">>
            },
            repository_client => #{
                url => <<"http://dmt.default:8022/v1/domain/repository_client">>
            },
            author => #{
                url => <<"http://dmt.default:8022/v1/domain/author">>
            }
        }},
        %% Kafka configuration for publishing domain events
        {kafka, #{
            %% Kafka broker endpoints - using containerized Kafka
            brokers => [{"kafka", 29092}],

            %% Topic to publish commit events to
            topic => <<"domain_changes">>,

            %% Producer configuration
            producer => #{
                % Wait for all replicas to acknowledge (-1 = all replicas)
                required_acks => -1,
                % 10 seconds timeout for acks
                ack_timeout => 10000,
                % Max messages buffered per partition
                partition_buffer_limit => 256,
                % Max in-flight requests per partition
                partition_onwire_limit => 1,
                % Max batch size in bytes
                max_batch_size => 16384,
                % Max retry attempts
                max_retries => 3,
                % Backoff between retries
                retry_backoff_ms => 500
            }

            %% Optional SASL authentication (uncomment if needed)
            %% ,sasl => {plain, "username", "password"}
        }}
    ]},

    {woody, [
        {acceptors_pool_size, 4}
    ]},

    {epg_connector, [
        {databases, #{
            default_db => #{
                host => "dmt_db",
                port => 5432,
                username => "postgres",
                password => "postgres",
                database => "dmt"
            }
        }},
        {pools, #{
            default_pool => #{
                database => default_db,
                size => 10
            },
            author_pool => #{
                database => default_db,
                size => 10
            }
        }}
    ]},

    {scoper, [
        {storage, scoper_storage_logger}
    ]},

    {how_are_you, [
        {metrics_publishers, [
            % {hay_statsd_publisher, #{
            %     key_prefix => <<".">>,
            %     host => "localhost",
            %     port => 8125
            % }}
        ]}
    ]},

    {prometheus, [
        {collectors, [
            default
        ]}
    ]}
].
