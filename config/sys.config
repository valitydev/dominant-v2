[
    {kernel, [
        {log_level, info},
        {logger, [
            {handler, default, logger_std_h, #{
                level =>
                    debug,
                config => #{
                    type =>
                        {file, "/var/log/dmt/console.json"},
                    sync_mode_qlen =>
                        20
                },
                formatter =>
                    {logger_logstash_formatter, #{}}
            }}
        ]}
    ]},

    {dmt, [
        {host, <<"dmt">>},
        {port, 8022},
        {scoper_event_handler_options, #{
            event_handler_opts => #{
                formatter_opts => #{
                    max_length => 1000
                }
            }
        }},
        {services, #{
            repository => #{
                url => <<"http://dmt.default:8022/v1/domain/repository">>
            },
            repository_client => #{
                url => <<"http://dmt.default:8022/v1/domain/repository_client">>
            },
            author => #{
                url => <<"http://dmt.default:8022/v1/domain/author">>
            }
        }},
        {epg_db_name, dmt},
        {kafka, #{
            enabled => true,
            topic => <<"domain_changes">>
        }}
    ]},

    %% Brod Kafka client configuration for DMT
    {brod, [
        {clients, [
            {dmt_kafka_client, [
                {endpoints, [{"kafka", 29092}]},
                {reconnect_cool_down_seconds, 10},
                {auto_start_producers, true},
                {default_producer_config, [
                    {required_acks, -1},
                    {ack_timeout, 10000},
                    {partition_buffer_limit, 256},
                    {partition_onwire_limit, 1},
                    {max_batch_size, 16384},
                    {max_retries, 3},
                    {retry_backoff_ms, 500}
                ]}
                %% Optional SASL authentication (uncomment if needed)
                %% ,{sasl, {plain, "username", "password"}}
            ]}
        ]}
    ]},

    {woody, [
        {acceptors_pool_size, 4}
    ]},

    {epg_connector, [
        {databases, #{
            dmt => #{
                host => "dmt_db",
                port => 5432,
                username => "postgres",
                password => "postgres",
                database => "dmt"
            }
        }},
        {pools, #{
            default_pool => #{
                database => dmt,
                size => 10
            },
            author_pool => #{
                database => dmt,
                size => 10
            }
        }}
    ]},

    {scoper, [
        {storage, scoper_storage_logger}
    ]},

    {how_are_you, [
        {metrics_publishers, [
            % {hay_statsd_publisher, #{
            %     key_prefix => <<".">>,
            %     host => "localhost",
            %     port => 8125
            % }}
        ]}
    ]},

    {prometheus, [
        {collectors, [
            default
        ]}
    ]}
].
